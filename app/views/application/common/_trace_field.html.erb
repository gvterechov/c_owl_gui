        <div class="ui popup top left transition hidden">
          <div class="ui action input">
            <input type="text" value="http://ww.short.url/c0opq">
            <button class="ui teal right labeled icon toggle button">
              <i class="copy icon"></i>
              <%= t('copy') %>
            </button>
